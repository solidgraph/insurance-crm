{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
                                 
    "moduleResolution": "nodenext",
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*"
      ]
    },
    "esModuleInterop": true,                       
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "ts-node": {
    "swc": true,
    "esm": true,
  },

  "exclude": [
    "node_modules",
    "dist"
  ]
}